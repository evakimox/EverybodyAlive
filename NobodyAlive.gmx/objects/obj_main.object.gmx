if(state == char_state.normal){
    char_movement_ctrl();
    if keyboard_check_pressed(ord('J')){
        AttackFirstEntry = true;
        state = char_state.attack;       
    }
    if keyboard_check_pressed(ord('L')){
        AttackFirstEntry = true;
        state = char_state.skill; 
    }
}
if(state == char_state.attack){
    follower.sprite_index = attacking_spr;
    follower.image_speed = 0.2;    
    if(AttackFirstEntry){
        AttackFirstEntry = false;
        audio_play_sound(atkSound,12,false);
        myHitBox = instance_create(x,y,obj_meleehitbox);
        myHitBox.sprite_index = hitbox_sprite;
        myHitBox.image_speed = 0.2;
        myHitBox.image_xscale = follower.image_xscale;
    }
    MaxImages = sprite_get_number(attacking_spr);
    if(follower.image_index &gt;= MaxImages-1){    
        state = char_state.normal;
    }
}

if(state == char_state.skill){
    follower.sprite_index = walking_spr;
    follower.image_speed = 0.2;    
    if(AttackFirstEntry){
        AttackFirstEntry = false;
        audio_play_sound(atkSound,12,false);
        if(global.MainType=="mage"){
            myHitBox = instance_create(x,y,obj_mageSkill);
        }
        else if(global.MainType=="sword"){
            myHitBox = instance_create(x,y,obj_swordSkill);
        }
        myHitBox.image_speed = 0.2;
        myHitBox.image_xscale = follower.image_xscale;
    }
    MaxImages = sprite_get_number(attacking_spr);
    if(follower.image_index &gt;= MaxImages-1){    
        state = char_state.normal;
    }
}
